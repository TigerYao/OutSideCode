<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/titlebk"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/taxi_fanhui_xxl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:onClick="onClick"
            android:src="@drawable/backbk" />

        <TextView
            android:id="@+id/taxi_didi_xxl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:text="我的小蜜蜂"
            android:textColor="#000000"
            android:textSize="16sp" />
    </FrameLayout>

  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/taxi_img_xxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_xxl"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/taxi_ratingBar_xxl"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:max="100"
            android:progress="85"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/taxi_jifeng_xxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周师傅"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical" >

             <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/blueline" />
            <!--
     <TextView 
     android:id="@+id/taxi_ruhejifeng_xxl"
     android:text="如何升级？"
     android:textSize="18sp"
     android:layout_weight="0.4"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     /> -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/taxi_qiangdanshu_xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抢单数"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/taxi_qiangdanshu_num_xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/taxi_haopingliu_xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评率"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/taxi_haopingliu_num_xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/taxi_paihangbang_xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排行榜"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/taxi_paihangbang_xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
