<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bk"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@drawable/titlebarbk"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/taxi_zhuce_xxl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/link_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/taxi_zhuce_fanhui_xxl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button_selector"
            android:gravity="center"
            android:onClick="onClick"
            android:text="登陆"
            android:textSize="18sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/tiaokuang_huang_xxl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" >

            <EditText
                android:id="@+id/register_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:hint="请输入您的手机号"
                android:textSize="18sp" />

            <Button
                android:id="@+id/getCheckNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取验证码" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:hint="请输入您的姓名"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/register_taxi_ccode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:hint="请输入您的车牌号"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/register_taxi_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:hint="公司名称"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/register_taxi_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/register_taxi_checknum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:hint="验证码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/blue_button"
            android:onClick="onClick"
            android:text="注  册"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>